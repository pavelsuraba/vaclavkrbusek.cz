{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "globals": {
        "module": true,
        "document": true,
        "window": true,
        "process": true
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["error", 4, {"SwitchCase": 1}],
        "quotes": ["error", "single"],
        "no-console": [0],
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
        "no-trailing-spaces": ["error"],
        "no-unused-vars": [2, {"varsIgnorePattern": "^_"}],
        "no-useless-escape": [0],
        "object-curly-spacing": ["error", "always"],
        "react/jsx-uses-vars": "error",
        "react/jsx-uses-react": "error",
        "semi": ["error", "always"],
        "space-before-function-paren": ["error", {
            "anonymous": "never",
            "named": "never",
            "asyncArrow": "ignore"
        }],
        "wrap-iife": [2, "inside"]
    },
    "extends": "eslint:recommended"
}
